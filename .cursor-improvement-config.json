{
  "backgroundAgent": {
    "enabled": true,
    "autoFix": true,
    "learningMode": "continuous",
    "improvementInterval": "daily",
    "maxImprovementsPerRun": 50
  },
  "errorDetection": {
    "typescript": true,
    "eslint": true,
    "security": true,
    "performance": true,
    "accessibility": true
  },
  "autoFixes": {
    "unusedImports": true,
    "consoleLogs": true,
    "anyTypes": true,
    "missingTypes": true,
    "securityIssues": true,
    "performanceOptimizations": true
  },
  "learning": {
    "learnFromFixes": true,
    "learnFromErrors": true,
    "learnFromUserFeedback": true,
    "adaptToCodebase": true,
    "rememberPatterns": true
  },
  "notifications": {
    "improvements": true,
    "errors": true,
    "suggestions": true,
    "learning": false
  },
  "exclusions": {
    "files": [
      "node_modules/**",
      "dist/**",
      "build/**",
      "*.min.js",
      "*.bundle.js"
    ],
    "patterns": [
      "test/**",
      "spec/**",
      "*.test.*",
      "*.spec.*"
    ]
  },
  "quality": {
    "minTestCoverage": 80,
    "maxComplexity": 10,
    "maxFileSize": 500,
    "maxFunctionLength": 50
  },
  "suggestions": {
    "refactoring": true,
    "optimization": true,
    "documentation": true,
    "testing": true,
    "security": true
  }
}
